{
  "name": "springpress",
  "description": "Custom top-level framework of Express.js",
  "version": "1.0.0",
  "author": "Vectier",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/riflowth/nextpress"
  },
  "scripts": {
    "build:dev": "webpack --mode=development --watch",
    "build:prod": "webpack --mode=production",
    "build": "yarn run build:prod",
    "dev": "npm-run-all --silent --parallel build:dev start:dev",
    "lint": "eslint . --ext .ts",
    "start:dev": "nodemon dist/app.js -q -w dist -e js",
    "start:prod": "node dist/app.js",
    "start": "yarn run start:prod",
    "test": "jest --silent"
  },
  "dependencies": {
    "express": "^4.17.3",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-webpack-plugin": "^3.1.1",
    "fork-ts-checker-webpack-plugin": "^7.2.1",
    "jest": "^27.5.1",
    "supertest": "^6.2.2",
    "terser-webpack-plugin": "^5.3.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-node-externals": "^3.0.0",
    "yarn-run-all": "^3.1.1"
  },
  "engines": {
    "node": "^16.14.0",
    "npm": "please-use-yarn"
  }
}
